# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password
MONGO_URI=mongodb://admin:your-secure-mongodb-password@mongodb:27017/helpdesk?authSource=admin

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# AI Agent Configuration
AUTO_CLOSE_ENABLED=true
CONFIDENCE_THRESHOLD=0.85
STUB_MODE=false

# Email Configuration
MAIL_FROM=noreply@yourdomain.com

# Frontend Configuration
VITE_API_BASE=https://yourdomain.com/api

# Server Configuration
PORT=8080
NODE_ENV=production

# Optional: External Services
# MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/helpdesk
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=https://your-sentry-dsn
# LOG_LEVEL=info
